<!DOCTYPE html>
<html>
  <head>
    <title>ClimbOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.alert %>
      <div class="errors">
        <%= flash.alert %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
