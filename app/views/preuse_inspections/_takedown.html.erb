<hr>
<br>
<%= f.fields_for takedown do |ff| %>

<%# TODO so nasty, get all this into helpers! %>
  <%= ff.fields_for :ropes do |rope_form| %>
    <% takedown.ropes.each do |rope| %>
      <%= rope_form.fields_for rope do |indv_rope_form| %>
        <%= indv_rope_form.label :identifier, "#{rope.identifier}" %>
        <% 4.times do |i| %>
          <%= indv_rope_form.fields_for Element::Rope::Climb.new do |climb_form| %>
            <%= climb_form.phone_field :number_of_climbs, {name: "preuse_inspection[preuse_inspection_takedown][ropes][#{rope.identifier}][#{i}]"} %>
          <% end %>
        <% end %> <br>
      <% end %>
    <% end %>
  <% end %>

<%# TODO this can be abstraced too %>
  <%= @element.preuse_equipment_instructions %><br>
  Section completed? <%= ff.check_box :equipment_complete %><br>
  <%= @element.preuse_element_instructions %><br>
  Section completed? <%= ff.check_box :element_complete %><br>
  <%= @element.preuse_environment_instructions %><br>
  Section completed? <%= ff.check_box :environment_complete %><br>
<% end %>

