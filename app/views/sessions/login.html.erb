<%= form_for User.new, {url: '/login'} do |f| %>
  <div class="form-group">
    <%= f.label "Email:" %>
    <%= f.text_field :email %><br>
  </div>
  <div class="form-group">
    <%= f.label "Password:" %>
    <%= f.password_field :password %><br>
  </div>
  <div class="form-group">
    <%= f.submit "Log In" %>
  </div>
<% end %>


<p>
  <%= link_to "Signup", '/signup' %><br>
  Or login/signup using <a href="/auth/facebook">Facebook</a>
</p>
