body {
  background-color: #2A4108;
  color: #272200;
  font-size: 120%;
}

#elements-list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.element-card {
  margin: 20px 0px;
  position: relative;
  overflow: hidden;
  height: 170px;
  width: 98%;
}

.element-card img {
  position: absolute;
  top: -40px;
  opacity: .6;
  width: 100%;
  z-index: -1;
  transition: opacity .3s
}

.element-card-links {
  padding: 5px;
  color: white;
  list-style: none;
  height: 100%;
  padding-left: 20px;
  background: 
    linear-gradient(
      to left,
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, .6)
    );
}

.element-card-links:hover + img {
  opacity: .9;
}

.element-card-links a {
  color: white;
}