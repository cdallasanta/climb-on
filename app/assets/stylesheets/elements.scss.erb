body {
  background-color: #2A4108;
  margin-top: 12vh;
  color: #272200;
  font-size: 120%;
}

.element-card {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  opacity: .6;
  width: 100%;
  margin: 30px 0px;
  padding: 5px;
  transition: 0.3s;

  color: white;
}

.element-card:hover {
  opacity: .75;
}